<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scene"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/blue_octo"
    tools:context="com.octo.pde.androidanimations.activity.TransitionBasicsActivity">

    <Button
        android:id="@+id/button_transition"
        android:text="REVERT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:layout_alignParentBottom="true"
        android:onClick="revertSceneTransition"/>

    <ImageView
        android:id="@+id/imageview_better_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/better_way"
        android:contentDescription="@string/better_way" />

    <ImageView
        android:id="@+id/imageview_why"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_better_way"
        android:layout_centerHorizontal="true"
        android:src="@drawable/octo_why"/>

</RelativeLayout>
